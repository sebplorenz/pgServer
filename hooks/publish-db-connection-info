#!/bin/bash

postgresql_url="postgresql://$PGUSER:$OPENSHIFT_QTPOSTGRESQL_PASSWORD@$OPENSHIFT_GEAR_DNS:$OPENSHIFT_QTPOSTGRESQL_PROXY_PORT/"

echo "OPENSHIFT_POSTGRESQL_DB_GEAR_UUID=$OPENSHIFT_GEAR_UUID"
echo "OPENSHIFT_POSTGRESQL_DB_GEAR_DNS=$OPENSHIFT_GEAR_DNS"
echo "OPENSHIFT_POSTGRESQL_DB_USERNAME=$PGUSER"
echo "OPENSHIFT_POSTGRESQL_DB_PASSWORD=$OPENSHIFT_QTPOSTGRESQL_PASSWORD"
echo "OPENSHIFT_POSTGRESQL_DB_HOST=$OPENSHIFT_GEAR_DNS"
echo "OPENSHIFT_POSTGRESQL_DB_PORT=$OPENSHIFT_QTPOSTGRESQL_PROXY_PORT"
echo "OPENSHIFT_POSTGRESQL_DB_URL=$postgresql_url"

# Set these variables so /usr/bin/psql works properly
echo "PGHOST=$OPENSHIFT_POSTGRESQL_DB_GEAR_DNS"
echo "PGPORT=$OPENSHIFT_POSTGRESQL_DB_PROXY_PORT"
echo "PGUSER=$PGUSER"
echo "PGPASSWORD=$OPENSHIFT_QTPOSTGRESQL_PASSWORD"
echo "PGDATABASE=$OPENSHIFT_APP_NAME"

# version
echo "OPENSHIFT_POSTGRESQL_VERSION=$OPENSHIFT_POSTGRESQL_VERSION"
